<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>online-mcq-exam</display-name>
  <servlet>
    <servlet-name>mcq</servlet-name>
    <servlet-class>com.jsp.mcqexam.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>mcq</servlet-name>
    <url-pattern>/mcq/save</url-pattern>
    <url-pattern>/mcqtest/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>signUp</servlet-name>
    <servlet-class>com.jsp.mcqexam.servlet.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signUp</servlet-name>
    <url-pattern>/signUp/save</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.jsp.mcqexam.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>question</servlet-name>
    <servlet-class>com.jsp.mcqexam.servlet.QuestionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>question</servlet-name>
    <url-pattern>/question/save</url-pattern>
    <url-pattern>/question/list</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>answerOption</servlet-name>
    <servlet-class>com.jsp.mcqexam.servlet.AnswerOptionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>answerOption</servlet-name>
    <url-pattern>/answer-Option/save</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>answerScript</servlet-name>
    <servlet-class>com.jsp.mcqexam.servlet.AnswerScriptServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>answerScript</servlet-name>
    <url-pattern>/answerScript/save</url-pattern>
    <url-pattern>/answerScript/list</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>participant</servlet-name>
    <servlet-class>com.jsp.mcqexam.servlet.ParticipantServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>participant</servlet-name>
    <url-pattern>/participant/save</url-pattern>
    <url-pattern>/participant/list</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
</web-app>